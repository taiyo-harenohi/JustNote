<Window x:Class="JustNote.App.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustNote.App.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" Background="WhiteSmoke" WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <WrapPanel HorizontalAlignment="Center">
            <Image Source="/Graphics/calendar_icon.png" Height="100" Width="100"/>
            <Image Source="/Graphics/loading.png" Height="100" Width="100"/>
        </WrapPanel>
        <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="25" >
           <Bold> JustNote is loading</Bold><LineBreak></LineBreak>
            Please wait a minute.
        </TextBlock>
    </StackPanel>
</Window>
