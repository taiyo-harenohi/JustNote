<Window x:Class="JustNote.App.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustNote.App.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" Background="#FFF1E6" WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="300" Width="800">
    <StackPanel VerticalAlignment="Center" Loaded="StackPanel_Loaded">
        <WrapPanel HorizontalAlignment="Center" Margin="40,0,0,0">
            <Image Source="/Graphics/title.png" Height="220"/>
        </WrapPanel>
        <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="25" Text="JustNote is loading..."
                    Foreground="#C69D7B">
        </TextBlock>
    </StackPanel>
</Window>
