<UserControl x:Class="JustNote.App.Components.NoteTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustNote.App.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- bind deleting button here -->
        <StackPanel Grid.Row="0" MinHeight="20" Background="#EDDCD2">
            <Button HorizontalAlignment="Right" MinHeight="20" Height="20" Background="Transparent" BorderThickness="0">
                <Image Source="../Graphics/close.png"></Image>
            </Button>
        </StackPanel>
        <TextBox Name="tbNote" Grid.Row="1" Background="#EDDCD2" Foreground="#C69D7B" AcceptsReturn="True" AcceptsTab="True" 
                 FontSize="35" MinHeight="130" TextWrapping="Wrap" BorderThickness="0"></TextBox>
    </Grid>
</UserControl>
