<Window x:Class="JustNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:JustNote"
        xmlns:viewModels="clr-namespace:JustNote.App.Viewmodels"
        xmlns:views="clr-namespace:JustNote.App.Views"
        xmlns:converters="clr-namespace:JustNote.App.Converters"
		xmlns:component="clr-namespace:JustNote.App.Components"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type viewModels:MainViewModel}}"
        Background="#FFF1E6"
        Title="MainWindow" Height="800" Width="1000" MinHeight="500" MinWidth="500">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding FetchDateData}"
                                 CommandParameter="{Binding Source={x:Static sys:DateTime.Today}}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid Name="grid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="10*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="35*"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Column="1" Grid.Row="0" Command="{Binding SaveDateDataCommand}"></Button>
            
            <!-- binding calendar viewmodel here-->
            <Button Grid.Column="1" Grid.Row="1" Width="100" Height="100" Grid.RowSpan="2"
                Background="Transparent" BorderThickness="0" Command="{Binding ShowCalendarCommand}">
                <Image Source="Graphics/calendar.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>
            </Button>
            <!-- binding Date (has two parts: date and time) here 
            //Otevrel
            -->
            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        >
                <TextBlock
                       FontSize="25"
                       Foreground="#A5A58D"
                       Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat={}{0:dd/MM/yyyy}}">

                </TextBlock>
                <TextBlock 
                       FontSize="25"
                       Foreground="#A5A58D"
                       Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat={}{0:hh:mm}}">

                </TextBlock>
            </StackPanel>

            <!-- binding Title here -->
            <TextBox Name="tbTitle"
                     Grid.Column="3"
                     Grid.Row="1"
                     Foreground="#A5A58D"
                     FontSize="65" 
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     MaxLines="1"
                     BorderThickness="0"
                     Text="{}"
                     Background="#FFF1E6"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Stretch"
                     >
                
            </TextBox>
        <Line Grid.Column="3" Grid.Row="2" Stroke="#A5A58D" X1="0" X2="3500" 
              VerticalAlignment="Stretch" HorizontalAlignment="Center" StrokeThickness="5"></Line>
            
			<!-- binding Text here-->
      <ScrollViewer Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Margin="0,5,0,0" Height="Auto" Width="Auto" 
            <ItemsControl x:Name="ic" ItemsSource="{Binding Notes}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Margin="0,5,0,0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ItemsControl x:Name="ic" ItemsSource="{Binding Notes}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Name="DateCanvas"  Background="#FFF1E6">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseLeftButtonDown">
                                            <b:InvokeCommandAction Command="{Binding CanvasLClick}" PassEventArgsToCommand="True"
                                     CommandParameter="{Binding ElementName=DateCanvas}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>
                                    <component:NoteTextbox x:Name="tbNote" Canvas.Left="{Binding Position[0]}" Canvas.Top="{Binding Position[1]}"/>
                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- binding settings viewmodel here-->
            <Button Grid.Column="5" Grid.Row="1" Width="100" Height="100" Grid.RowSpan="2"
                Background="Transparent" BorderThickness="0">
                <Image Source="Graphics/menu.png"></Image>
            </Button>
        </Grid>
       
        <views:ViewCalendar Grid.ColumnSpan="3" Grid.RowSpan="5" Visibility="{Binding CalendarViewVisible, Converter={StaticResource BoolToVis}, ConverterParameter=False}" DataContext="{Binding CalendarViewModel}" Width="348" HorizontalAlignment="Left"/>
        
    </Grid>
</Window>
